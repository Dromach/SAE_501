{% block main %}

<article class="max-w-3xl mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
    <div id="progress"></div>

    <header class="mb-6 text-center">
        <h1 class="text-3xl font-bold text-gray-800">{{ article.title }}</h1>
        <p class="text-gray-600 mt-2">
            Par 
            <a href="/author/{{ article.author_id }}" class="font-semibold text-blue-500 hover:underline">
                {{ article.author.firstname ~ " " ~ article.author.lastname }}
            </a>
            | 
            <time datetime="{{ article.created_at }}" class="italic">
                {{ article.created_at|date("dd/LL/yyyy Ã  HH:mm") }}
            </time>
        </p>
    </header>

    {% if article.image %}
    <div class="mb-6">
        <img src="/uploads/{{ article.image }}" alt="Illustration de {{ article.title }}" 
             class="w-full h-auto object-cover rounded-lg shadow">
    </div>
    {% endif %}

    {% if article.abstract %}
    <section class="text-gray-700 font-semibold text-lg leading-relaxed">
        <p>{{ article.abstract }}</p>
    </section>
    {% endif %}

    <section class="text-gray-700 leading-relaxed mt-6">
        <p>{{ article.content }}</p>
    </section>

    {% if article.yt_video_id %}
    <div class="mt-8">
        <iframe class="w-full h-64 md:h-96" 
                src="{{ article.yt_video_id | youtubeEmbed }}" 
                frameborder="0" allowfullscreen>
        </iframe>
    </div>
    {% endif %}

</article>

{% block commentaires_articles %}
    <h2 class="text-2xl font-bold text-gray-800 mt-10 mb-4">Commentaires</h2>

    <div id="flash-container" class="mt-3"></div>

    <section>
        <div class="max-w-xl mx-auto">
            <form action="#" method="post" class="async-comment-form bg-gray-100 p-6 rounded-lg">
                <label for="nickname" class="text-gray-700 font-bold">Votre pseudonyme</label>
                <input type="text" name="nickname" id="nickname" class="w-full border border-gray-300 rounded-lg p-2 focus:outline-none mt-2"
                       placeholder="Si vous ne remplissez pas, votre pseudonyme sera anonyme.">

                <label for="content" class="block text-gray-700 font-bold mt-4">Votre commentaire</label>
                <textarea name="content" id="content" cols="30" rows="5" 
                          class="w-full border border-gray-300 rounded-lg p-2 focus:outline-none mt-2"></textarea>

                <button type="submit" class="w-full bg-blue-500 text-white px-4 py-2 rounded-lg mt-4 hover:bg-blue-600">
                    Envoyer
                </button>
            </form>
        </div>
    </section>
{% endblock %}

{% endblock %}
