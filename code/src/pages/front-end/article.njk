{% for article in list_articles.data %}
    <li>
        <a href="/article/{{ article.id }}" 
           class="article-link flex flex-col sm:max-lg:landscape:flex-row w-full shadow hocus:shadow-xl transition-shadow rounded-lg overflow-hidden">
            <div class="aspect-[25/14] overflow-hidden">
                <img class="object-cover h-full w-full" src="{{ 'images/default-sae-image.png' if article.image|length == 0 else '/uploads/' ~ article.image }}" alt="">
            </div>
            <section class="p-8 pb-11">
                <h2 class="text-2xl font-bold">{{ article.title }}</h2>
                <p>{{ article.chapo }}</p>
            </section>
        </a>
    </li>
{% endfor %}
