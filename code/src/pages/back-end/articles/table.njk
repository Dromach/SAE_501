{% macro table(list) %}
    <table class="w-full bg-white border-collapse">
        <thead>
            <tr class="text-slate-800">
                <th class="font-bold px-6 text-left border-solid border-slate-200 border-b py-3 min-w-52">Titre</th>
                <th class="font-bold px-6 text-left border-solid border-slate-200 border-b py-3">Abstract</th>
                <th class="font-bold px-6 text-left border-solid border-slate-200 border-b py-3">Content</th>
                <th class="font-bold px-6 text-left border-solid border-slate-200 border-b py-3">Image</th>
                <th class="font-bold px-6 text-left border-solid border-slate-200 border-b py-3">Auteurs</th>
            </tr>
        </thead>
        
        <tbody>
            {% for item in list.data %}
                <tr class="hover:bg-neutral-50 even:bg-blue-50">
                    <td class="bg-transparent border-solid border-slate-200 border-b py-4 px-6 min-w-52" data-label="firstname">{{ item.firstname }}</td>
                    <td class="bg-transparent border-solid border-slate-200 border-b py-4 px-6 min-w-52" data-label="lastname">{{ item.lastname }}</td>
                    <td class="bg-transparent border-solid border-slate-200 border-b py-4 px-6 min-w-52" data-label="email">{{ item.email }}</td>
                    <td class="py-4 px-6 bg-transparent border-solid border-slate-200 border-b shadow-transparent" data-label="content">
                        {% if item.content %}
                            <p class="line-clamp-2 md:line-clamp-1" title="{{ item.content }}">{{ item.content }}</p>
                        {% endif %}
                    </td>
                    <td class="bg-transparent border-solid border-slate-200 border-b py-4 px-6 min-w-52" data-label="identity">{{ item.identity }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center bg-transparent border-solid border-slate-200 border-b py-4 px-6">Pas de contenu pour le moment</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endmacro %}